[flake8]
; instead of ignoring E501 just check that lines have sane width
; and left everything else to the black
max-line-length = 120
doctests = True
ignore = W503
per-file-ignores = __init__.py:F401
exclude =
    .git
    __pycache__
    setup.py
    build
    dist
    releases
    .venv
    .mypy_cache
    .pytest_cache
    .vscode
    .idea
    .github
    playground.py
max-complexity = 10
